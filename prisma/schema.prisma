// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  name              String   @unique
  password          String
  hasChangedPassword Boolean @default(false)
  isLoggedIn        Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  picks             Pick[]
  drafts            Draft[]  @relation("DraftParticipants")
  formations        Formation[]

  @@map("users")
}

model Draft {
  id              String   @id @default(cuid())
  name            String   @default("FIFA Draft 2026")
  currentTurn     Int      @default(0)
  round           Int      @default(1)
  totalRounds     Int      @default(16)
  isComplete      Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  participants    User[]   @relation("DraftParticipants")
  picks          Pick[]
  formations     Formation[]

  @@map("drafts")
}

model Pick {
  id        String   @id @default(cuid())
  round     Int
  pickOrder Int      // Order within the round
  createdAt DateTime @default(now())

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  draftId   String
  draft     Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)
  playerId  Int      // Reference to player from CSV

  @@unique([draftId, playerId])
  @@map("picks")
}

model Formation {
  id        String   @id @default(cuid())
  userId    String
  draftId   String
  formation String   @default("4-4-2") // e.g., "4-4-2", "4-3-3", "3-5-2"
  positions Json     // Array of player positions on the field
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  draft     Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)

  @@unique([userId, draftId])
  @@map("formations")
}
